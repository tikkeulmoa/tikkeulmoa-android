<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud"
        tools:context=".ui.community.CommunityDetailActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/community_top"/>
            <ImageView
                    android:id="@+id/btn_write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/write_go"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="10dp"/>
            <ImageView
                    android:id="@+id/btn_calendar_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="15dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#F8FCFF">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/community_circle"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="티끌 42명"
                        android:layout_marginLeft="7dp"
                        android:textColor="#3672d3"
                        android:textSize="13dp"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:layout_gravity="center_vertical"/>
                <ImageView
                        android:id="@+id/btn_community_detail_act_plus_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus_member"
                        android:layout_marginLeft="7dp"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번 겨울에는 바다 여행 꼭 가봅시다! 화이팅입니다 여러분"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginBottom="12dp"/>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#E9ECEE"/>
        <LinearLayout
                android:id="@+id/btn_community_detail_act_notice_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공지"
                    android:textColor="#404040"
                    android:textSize="14dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:includeFontPadding="false"
                    android:layout_marginVertical="10dp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E9ECEE">
            </View>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[이총무]"
                        android:textColor="#404040"
                        android:textSize="12dp"
                        android:layout_marginLeft="19dp"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:includeFontPadding="false"
                        android:layout_marginVertical="10dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매주 월요일 만원씩 입금!!"
                        android:textColor="#404040"
                        android:textSize="12dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:includeFontPadding="false"
                        android:layout_marginVertical="10dp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E9ECEE">
            </View>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[김회장님]"
                        android:textColor="#404040"
                        android:textSize="12dp"
                        android:layout_marginLeft="19dp"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:includeFontPadding="false"
                        android:layout_marginVertical="10dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10월 25일 모임 참가투표 필수로 해주세요!"
                        android:textColor="#404040"
                        android:textSize="12dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:includeFontPadding="false"
                        android:layout_marginVertical="10dp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="#E9ECEE">
            </View>
        </LinearLayout>
        <ImageView
                android:src="@drawable/community_write1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#E9ECEE">
        </View>
        <ImageView
                android:src="@drawable/community_write1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#E9ECEE">
        </View>
        <ImageView
                android:src="@drawable/community_write1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#E9ECEE">
        </View>
    </LinearLayout>
</ScrollView>