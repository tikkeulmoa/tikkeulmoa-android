<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.account.AccountActivity"
        android:orientation="vertical"
        android:background="@color/backgroud"
        android:gravity="center_horizontal">
    <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="태산 만들기"
                android:textSize="14sp"
                android:textColor="@color/titleText"
                android:fontFamily="@font/nanumsquare_acb"/>
        <ImageView
                android:id="@+id/btn_close"
                android:layout_alignParentRight="true"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/close"/>

    </RelativeLayout>


    <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/line">

    </View>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/img_account_agree"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/account_agree"/>
        <ImageView
                android:id="@+id/img_account_certificate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/certificate_account"/>

        <LinearLayout
                android:id="@+id/layout_account_third"
                android:layout_marginTop="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_name"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/account_back"/>
                <EditText
                        android:id="@+id/account_name"
                        android:layout_centerInParent="true"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:hint="티끌모아 태산"
                        android:textColorHint="#315289"
                        android:textColor="#315289"
                        android:fontFamily="@font/nanumsquare_aceb"
                        android:textSize="22.5sp"
                        android:background="@null"/>
            </RelativeLayout>


            <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_password"/>
            <EditText
                    android:id="@+id/account_password"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:inputType="numberPassword"
                    android:textColor="@color/titleText"
                    android:background="@drawable/blue_blank"/>
            <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_phone"/>
            <EditText
                    android:id="@+id/account_phoneNum"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:inputType="phone"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:textColor="@color/titleText"
                    android:background="@drawable/blue_blank"/>
            <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_eng_name"/>
            <EditText
                    android:id="@+id/account_eng_name"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:textColor="@color/titleText"
                    android:background="@drawable/blue_blank"/>
            <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_home_address"/>
            <EditText
                    android:id="@+id/account_home_address"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:textColor="@color/titleText"
                    android:background="@drawable/blue_blank"/>
            <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_email"/>
            <EditText
                    android:id="@+id/account_email"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:textColor="@color/titleText"
                    android:background="@drawable/blue_blank"/>




        </LinearLayout>

    </RelativeLayout>

    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
        <TextView
                android:id="@+id/btn_next"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#2c77f1"
                android:gravity="center"
                android:text="다 음"
                android:textColor="#ffffff"
                android:fontFamily="@font/nanumsquare_acb"
                android:textSize="18sp"/>
        
        
    </RelativeLayout>

</LinearLayout>